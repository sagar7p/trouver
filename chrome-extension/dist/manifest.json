{
  "manifest_version": 2,

  "key": "",

  "name": "Trouver",
  "description": "The ultimate planning and aggregation tool to find your next adventure",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": true
  },

  "oauth2": {
    "client_id": "614597076585-rdh6u0ub8kaamop2p3ekkr87ql1td6bq.apps.googleusercontent.com",
    "scopes": ["profile", "https://www.googleapis.com/auth/userinfo.email"]
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": ["contextMenus", "storage", "identity", "identity.email"],
  "content_security_policy": "script-src 'self' https://maps.googleapis.com; object-src 'self'"
}
